#include "Gyro.h"
#include "Leg.h"
#include "Display.h"
#include "Arduino.h"

#include "Balance.h"

Balance::Balance(Gyro *gyro, Legs *legs) {
  this->gyro = gyro;
  this->legA = &legs->legA;
  this->legB = &legs->legB;
  this->legC = &legs->legC;
  this->legD = &legs->legD;

  this->desiredState = None;
}

void Balance::setup() {
  legA->setup();
  legB->setup();
  legC->setup();
  legD->setup();

  gyro->setup();
  display.setup();
}

/**
 * Determine Trailer state from sensor data
 */
DesiredState Balance::determineState() {
  // Trailer can only be balanced if all legs are on ground
  if (gyro->isBalanced() && allLegsOnGround()) {
    return Balanced;
  }

  if ((legA->getPosition() == Zero) && (legB->getPosition() == Zero) &&
      (legC->getPosition() == Zero) && (legD->getPosition() == Zero)) {
    return Zero;
  }

  if ((legA->getPosition() == Final) && (legB->getPosition() == Final) &&
      (legC->getPosition() == Final) && (legD->getPosition() == Final)) {
    return Final;
  }

  return Unknown;
}

void Balance::toZero() {
  desiredState = Zero;
  
  collapseLegIfNotZero(legA);
  collapseLegIfNotZero(legB);
  collapseLegIfNotZero(legC);
  collapseLegIfNotZero(legD);
}

void Balance::balance() {
  if (getState() != Zero) {
    display.println("Error: Move legs to START first");
    return;
  }

  desiredState = Balanced;
}

void Balance::collapseLegIfNotZero(Leg *leg) {
  if (leg->getPosition() != Zero) {
    leg->collapse();
  }
}

void Balance::loop() {
  legA->loop();
  legB->loop();
  legC->loop();
  legD->loop();

  // Always check zero or final state for safety
  stopMotorIfZeroOrFinal(legA);
  stopMotorIfZeroOrFinal(legB);
  stopMotorIfZeroOrFinal(legC);
  stopMotorIfZeroOrFinal(legD);
 
  if (desiredState == None) {
    return;
  }

  // Stop everything if any motors stopped during balancing
  if (desiredState == Balanced && anyMotorStopped()) {
    stopAllMotors();
    display.println("Error levelling. All motors stopped.");
    desiredState = None;
  }

  if (desiredState == Balanced && allLegsOnGround()) {
    loopLevel();
  }
}

void Balance::loopLevel() {  
  if (getState() == Balanced) {
    stopAllMotors();
    desiredState = None;
  }

  // Could also be A and C at the same time
  if (gyro->getPitchPosition() == UnderBalanced && gyro->getRollPosition() == UnderBalanced) {
    expandLeg(legA);
  } else if (gyro->getPitchPosition() == UnderBalanced && gyro->getRollPosition() == OverBalanced) {
    expandLeg(legB);
  // Could also be B and D at the same time
  } else if (gyro->getPitchPosition() == OverBalanced && gyro->getRollPosition() == OverBalanced) {
    expandLeg(legC);
  } else if (gyro->getPitchPosition() == OverBalanced && gyro->getRollPosition() == UnderBalanced) {
    expandLeg(legD);
  }
}

void Balance::expandLeg(Leg *leg) {
  // Check if any other motor is already running
  if (leg->isMotorStopped()) {
    stopAllMotors();
    leg->expand();
  }
}

/**
 * Determines if all legs are on ground
 */
bool Balance::allLegsOnGround() {
  return legA->isOnGround() && legB->isOnGround() && legC->isOnGround() && legD->isOnGround();
}

void Balance::stopMotorIfZeroOrFinal(Leg *leg) {
  if ( (leg->getPosition() == Zero && leg->isMotorRunning()) ||
       (leg->getPosition() == Final && leg->isMotorRunning()) ) {
    leg->stop();
    
    display.print("Leg ");
    display.print(leg->getName());
    display.print(" stopped.");
    
    if (leg->getPosition() == Zero) {
      display.print("Motor reached ZERO position.");
    } else {
      display.print("Motor reached FINAL position.");
    }
  }
}

bool Balance::() {
  return legA->isMotorRunning() || legB->isMotorRunning() || legC->isMotorRunning() || legD->isMotorRunning();
}

bool Balance::allMotorsStopped() {
  return legA->isMotorStopped() && legB->isMotorStopped() && legC->isMotorStopped() && legD->isMotorStopped();
}

bool Balance::anyMotorRunning() {
  return legA->isMotorRunning() || legB->isMotorRunning() || legC->isMotorRunning() || legD->isMotorRunning();
}

bool Balance::anyMotorStopped() {
  return legA->isMotorStopped() || legB->isMotorStopped() || legC->isMotorStopped() || legD->isMotorStopped();
}

void Balance::stopAllMotors() {
  legA->stop();
  legB->stop();
  legC->stop();
  legD->stop();
}

